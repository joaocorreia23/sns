{
  "openapi": "3.0.0",
  "info": {
    "title": "API SNS24",
    "description": "Bem-Vindo(a) a API do SNS24",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "tags": [
    {
      "name": "Autenticação",
      "description": "Serviço de Autenticação"
    },
    {
      "name": "Utilizadores",
      "description": "Serviço de Utilizadores"
    }
  ],
  "paths": {
    "/auth/login": {
      "post": {
        "tags": ["Autenticação"],
        "summary": "Verificar Login",
        "description": "Necessário Email e Password",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "true"
          }
        }
      }
    }
  }
}
